{
  "name": "lotus",
  "private": true,
  "scripts": {
    "dev": "next dev --hostname \"${LOTUS__SERVER__HOST:-0.0.0.0}\" --port \"${LOTUS__SERVER__PORT:-43000}\"",
    "run": "next start --hostname \"${LOTUS__SERVER__HOST:-0.0.0.0}\" --port \"${LOTUS__SERVER__PORT:-43000}\"",
    "build": "next build",
    "clean": "rm --recursive --force build/",
    "update": "ncu --peer --upgrade && npm i --no-audit --no-fund",
    "generate-api-pelican": "openapi-typescript openapi/pelican.yaml -o src/api/pelican/types.d.ts",
    "generate-api": "npm run -- generate-api-pelican"
  },
  "dependencies": {
    "@mantine/core": "^7.7.1",
    "@mantine/form": "^7.7.1",
    "@mantine/hooks": "^7.7.1",
    "@mantine/notifications": "^7.7.1",
    "@tabler/icons-react": "^3.1.0",
    "client-only": "^0.0.1",
    "immer": "^10.0.4",
    "next": "^14.1.4",
    "openapi-fetch": "^0.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "server-only": "^0.0.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "20.11.1",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.23",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.4",
    "eslint-config-prettier": "^9.1.0",
    "npm-check-updates": "^16.14.18",
    "openapi-typescript": "^7.4.0",
    "postcss": "^8.4.38",
    "postcss-preset-mantine": "^1.13.0",
    "postcss-simple-vars": "^7.0.1",
    "typescript": "^5.4.3"
  }
}
